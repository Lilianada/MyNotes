rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Check if the user is an admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }
    
    // User must be authenticated and an admin to access notes
    match /notes/{noteId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId && isAdmin(request.auth.uid);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId && isAdmin(request.auth.uid);
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId && isAdmin(request.auth.uid);
    }
    
    // Admin collection - only admins can read, but not write
    match /admins/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow write: if false; // Admin documents should only be managed server-side or by Firebase console
    }
  }
}
